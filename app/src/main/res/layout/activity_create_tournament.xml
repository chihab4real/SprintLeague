<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTournamentActivity">

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/go_back"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_left"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:layout_marginLeft="15dp"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="@string/add_tournament"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_marginTop="?actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"

                android:layout_marginRight="25dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightsolmon_gray"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/ic_title" />


                    <EditText


                        android:id="@+id/add_tournament_edittext_title"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"

                        android:layout_marginLeft="9dp"

                        android:background="@android:color/transparent"

                        android:hint="@string/tournament_title"
                        android:inputType="text" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView

                android:visibility="gone"
                android:id="@+id/text_view_enter_valid_title"
                android:textStyle="bold"
                android:textColor="@color/error_red"
                android:text="@string/enter_valid_title"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"

                android:layout_marginRight="25dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightsolmon_gray"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/ic_person" />


                    <EditText


                        android:enabled="false"
                        android:id="@+id/add_tournament_edittext_organizer"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"

                        android:layout_marginLeft="9dp"

                        android:background="@android:color/transparent"

                        android:hint="@string/tournament_organizer"
                        android:inputType="text" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"

                android:layout_marginRight="25dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightsolmon_gray"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/ic_distance" />


                    <EditText



                        android:id="@+id/add_tournament_edittext_distance"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"

                        android:layout_marginLeft="9dp"

                        android:background="@android:color/transparent"

                        android:hint="@string/distance"
                        android:inputType="number" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView

                android:visibility="gone"
                android:id="@+id/text_view_enter_valid_distance"
                android:textStyle="bold"
                android:textColor="@color/error_red"
                android:text="@string/enter_valid_distance"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout

                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"



                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <LinearLayout


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/lightsolmon_gray"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:src="@drawable/ic_calendar" />




                    </LinearLayout>
                </androidx.cardview.widget.CardView>





                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"


                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <LinearLayout


                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/lightsolmon_gray"
                            android:orientation="horizontal">


                            <ImageView
                                android:visibility="invisible"
                                android:layout_height="25dp"
                                android:layout_width="2dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/ic_person" />


                            <EditText


                                android:id="@+id/add_tournament_edittext_date"


                                android:layout_width="match_parent"

                                android:layout_height="match_parent"

                                android:layout_marginLeft="15dp"

                                android:background="@android:color/transparent"

                                android:hint="@string/date"
                                android:inputType="text" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>



            </LinearLayout>

            <TextView

                android:visibility="gone"
                android:id="@+id/text_view_enter_valid_date"
                android:textStyle="bold"
                android:textColor="@color/error_red"
                android:text="@string/enter_valid_date"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout

                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"



                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <LinearLayout


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/lightsolmon_gray"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:src="@drawable/ic_time" />




                    </LinearLayout>
                </androidx.cardview.widget.CardView>




                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_weight="0.4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"


                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <LinearLayout


                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/lightsolmon_gray"
                            android:orientation="horizontal">


                            <ImageView
                                android:visibility="invisible"
                                android:layout_height="25dp"
                                android:layout_width="2dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/ic_person" />


                            <EditText


                                android:id="@+id/add_tournament_edittext_time"


                                android:layout_width="match_parent"

                                android:layout_height="match_parent"

                                android:layout_marginLeft="10dp"

                                android:background="@android:color/transparent"

                                android:hint="@string/time"
                                android:inputType="textPersonName" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>














                </LinearLayout>













            </LinearLayout>

            <TextView

                android:visibility="gone"
                android:id="@+id/text_view_enter_valid_time"
                android:textStyle="bold"
                android:textColor="@color/error_red"
                android:text="@string/enter_valid_time"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"

                android:layout_marginRight="25dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightsolmon_gray"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/ic_people" />


                    <EditText



                        android:id="@+id/add_tournament_edittext_max_participants"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"

                        android:layout_marginLeft="9dp"

                        android:background="@android:color/transparent"

                        android:hint="@string/max_partic"
                        android:inputType="number" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView

                android:visibility="visible"
                android:id="@+id/hint_max_participants"
                android:textStyle="bold"
                android:textColor="@color/gray_white"
                android:text="@string/hint_max_participants"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <LinearLayout

                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"



                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <LinearLayout


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/lightsolmon_gray"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:src="@drawable/ic_location" />




                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"


                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <LinearLayout


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/lightsolmon_gray"
                        android:orientation="horizontal">


                        <ImageView

                            android:visibility="invisible"
                            android:layout_width="2dp"
                            android:layout_height="25dp"

                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:src="@drawable/ic_person" />


                        <EditText

                            android:id="@+id/add_tournament_edittext_street"


                            android:layout_width="match_parent"

                            android:layout_height="match_parent"

                            android:layout_marginLeft="15dp"

                            android:background="@android:color/transparent"

                            android:hint="@string/street"
                            android:inputType="text" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_weight="0.5"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="25dp"


                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">



                    <LinearLayout


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/lightsolmon_gray"
                        android:orientation="horizontal">


                        <ImageView

                            android:visibility="invisible"
                            android:layout_width="2dp"
                            android:layout_height="25dp"

                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:src="@drawable/ic_person" />


                        <EditText

                            android:id="@+id/add_tournament_edittext_city"


                            android:layout_width="match_parent"

                            android:layout_height="match_parent"

                            android:layout_marginLeft="15dp"

                            android:background="@android:color/transparent"

                            android:hint="@string/city"
                            android:inputType="text" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginRight="25dp"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"

                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <LinearLayout


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/lightsolmon_gray"
                        android:orientation="horizontal">


                        <ImageView

                            android:visibility="invisible"
                            android:layout_width="2dp"
                            android:layout_height="25dp"

                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:src="@drawable/ic_person" />


                        <EditText

                            android:id="@+id/add_tournament_edittext_postal_code"


                            android:layout_width="match_parent"

                            android:layout_height="match_parent"

                            android:layout_marginLeft="15dp"

                            android:background="@android:color/transparent"

                            android:hint="@string/postal_code"
                            android:inputType="text" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"


                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightsolmon_gray"
                    android:orientation="horizontal">


                    <ImageView

                        android:visibility="invisible"
                        android:layout_width="2dp"
                        android:layout_height="25dp"

                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/ic_person" />


                    <EditText

                        android:id="@+id/add_tournament_edittext_country"


                        android:layout_width="match_parent"

                        android:layout_height="match_parent"

                        android:layout_marginLeft="15dp"

                        android:background="@android:color/transparent"

                        android:hint="@string/country"
                        android:inputType="text" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_marginRight="26dp"
                android:id="@+id/add_tournament_open_map"
                android:layout_marginTop="5dp"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/blue"
                android:text="@string/select_from_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <TextView

                android:visibility="gone"
                android:id="@+id/text_view_enter_valid_addresse"
                android:textStyle="bold"
                android:textColor="@color/error_red"
                android:text="@string/enter_valid_address"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <TextView

                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:textSize="18sp"
                android:text="@string/tournament_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                app:cardElevation="1dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="@color/lightsolmon_darkgray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/tournament_cover"
                        android:src="@drawable/ic_add_outline"
                        android:layout_width="350dp"
                        android:layout_height="200dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:visibility="gone"
                android:layout_marginRight="26dp"
                android:id="@+id/remove_tournament_cover"
                android:layout_marginTop="5dp"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/error_red"
                android:text="@string/remove_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout


                android:layout_marginTop="20dp"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_weight="0.1"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/sponsors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <LinearLayout



                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/button_drawable_white_black_background"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/add_tournament_sponsor_add"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_add_circle_solmon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>

                        <TextView



                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/solmon"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:text="@string/add"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/add_tournament_sponsorsrecyclerview"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"

                android:layout_marginBottom="30dp"

                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="end"
                android:orientation="horizontal"
                android:layout_marginBottom="90dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout



                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/button_drawable_red_background"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/add_tournament_clear_all"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_clear_white"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>

                        <TextView



                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:text="@string/clear_all"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout



                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/button_drawable_solmon_background"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/add_tournament_create"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_save_white"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>

                        <TextView



                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:text="@string/create"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>






        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>