<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/lightsolmon_darkgray"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"

        android:layout_marginRight="25dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightsolmon_gray"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_corporate" />


            <EditText


                android:id="@+id/sponsor_name_input"
                android:layout_width="match_parent"

                android:layout_height="match_parent"

                android:layout_marginLeft="9dp"

                android:background="@android:color/transparent"

                android:hint="@string/sponsor_name"
                android:inputType="text" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@color/lightsolmon_darkgray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/sponsor_image_preview"
                android:layout_width="150dp"
                android:layout_height="150dp"

                android:src="@drawable/ic_image"
               />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>



    <LinearLayout



        android:layout_gravity="center"

        android:layout_marginTop="10dp"

        android:background="@drawable/button_drawable_solmon_background"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/select_image_button"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_add_circle_white"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView



                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:text="@string/select_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sponsor_dialog_cancel"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:textStyle="bold"
            android:textColor="@color/error_red"
            android:textSize="18sp"
            android:text="@string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/sponsor_dialog_add"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textColor="@color/solmon"
            android:textSize="18sp"
            android:text="@string/add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>
</LinearLayout>