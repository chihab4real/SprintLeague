<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.FinishedTournamentsActivity">

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/go_back"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_left"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:layout_marginLeft="15dp"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="@string/finished_tournaments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>




    <LinearLayout

        android:layout_marginTop="?actionBarSize"


        android:background="@color/lightsolmon_black"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ListView
            android:divider="@color/lightsolmon_black"

            android:id="@+id/finished_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>







    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>