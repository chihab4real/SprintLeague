<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">


    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="43dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textColor="@color/solmon"
                android:textSize="30sp"
                android:textStyle="bold" />


            <LinearLayout

                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="45dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"



                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <LinearLayout


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/lightsolmon_gray"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:src="@drawable/ic_person" />




                    </LinearLayout>
                </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"


                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <LinearLayout


                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/lightsolmon_gray"
                            android:orientation="horizontal">


                            <ImageView
                                android:visibility="invisible"
                                android:layout_height="25dp"
                                android:layout_width="2dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/ic_person" />


                            <EditText

                                android:id="@+id/signup_edittext_firstname"


                                android:layout_width="match_parent"

                                android:layout_height="match_parent"

                                android:layout_marginLeft="15dp"

                                android:background="@android:color/transparent"

                                android:hint="@string/first_name"
                                android:inputType="textPersonName" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"

                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <LinearLayout


                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/lightsolmon_gray"
                            android:orientation="horizontal">


                            <ImageView

                                android:visibility="invisible"
                                android:layout_width="2dp"
                                android:layout_height="25dp"

                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/ic_person" />


                            <EditText

                                android:id="@+id/signup_edittext_lastname"


                                android:layout_width="match_parent"

                                android:layout_height="match_parent"

                                android:layout_marginLeft="15dp"

                                android:background="@android:color/transparent"

                                android:hint="@string/last_name"
                                android:inputType="textPersonName" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView

                        android:visibility="gone"
                        android:id="@+id/text_view_enter_valid_name"
                        android:textStyle="bold"
                        android:textColor="@color/error_red"
                        android:text="@string/enter_valid_name"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>






            </LinearLayout>










            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightsolmon_gray"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/ic_email" />


                    <EditText

                        android:id="@+id/signup_edittext_email_or_phone"

                        android:layout_width="match_parent"

                        android:layout_height="match_parent"

                        android:layout_marginLeft="9dp"

                        android:background="@android:color/transparent"

                        android:hint="@string/email_or_phone"
                        android:inputType="text" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView

                android:visibility="gone"
                android:id="@+id/text_view_enter_valid_login"
                android:textStyle="bold"
                android:textColor="@color/error_red"
                android:text="@string/enter_valid_login"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightsolmon_gray"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_weight="0.4"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/ic_password1" />


                    <EditText



                        android:layout_weight="0.1"
                        android:id="@+id/signup_edittext_password"

                        android:layout_width="match_parent"

                        android:layout_height="match_parent"

                        android:layout_marginLeft="9dp"

                        android:background="@android:color/transparent"

                        android:hint="@string/password"
                        android:inputType="textPassword" />

                    <ImageView
                        android:id="@+id/signup_icon_hide_show_password"
                        android:layout_weight="0.4"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/ic_visible" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView

                android:visibility="gone"
                android:id="@+id/text_view_enter_valid_password"
                android:textStyle="bold"
                android:textColor="@color/error_red"
                android:text="@string/enter_valid_password"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView

                android:visibility="gone"
                android:textSize="12sp"

                android:id="@+id/text_view_enter_password_req"
                android:textColor="@color/error_red"
                android:text="@string/password_requirements"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <LinearLayout

                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"



                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <LinearLayout


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/lightsolmon_gray"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:src="@drawable/ic_security" />




                    </LinearLayout>
                </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"


                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <LinearLayout


                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/lightsolmon_gray"
                            android:orientation="horizontal">


                            <ImageView
                                android:visibility="invisible"
                                android:layout_height="25dp"
                                android:layout_width="2dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/ic_person" />


                            <Spinner
                                android:id="@+id/secuirty_questions"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"

                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <LinearLayout


                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/lightsolmon_gray"
                            android:orientation="horizontal">


                            <ImageView

                                android:visibility="invisible"
                                android:layout_width="2dp"
                                android:layout_height="25dp"

                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/ic_person" />


                            <EditText

                                android:id="@+id/secuirty_answer"


                                android:layout_width="match_parent"

                                android:layout_height="match_parent"

                                android:layout_marginLeft="15dp"

                                android:background="@android:color/transparent"

                                android:hint="@string/your_answer"
                                android:inputType="text" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView

                        android:visibility="gone"
                        android:id="@+id/text_view_enter_valid_answer"
                        android:textStyle="bold"
                        android:textColor="@color/error_red"
                        android:text="@string/enter_valid_answer"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>






            </LinearLayout>



            <RelativeLayout


                android:id="@+id/signup_click_signup"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/button_drawable_solmon_background">

                <TextView


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="@string/sign_up"

                    android:textAlignment="center"
                    android:textColor="@color/white_white"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="0.3"
                    android:background="@color/gray_white" />


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="@string/or"


                    android:textAlignment="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="0.3"
                    android:background="@color/gray_white" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"

                android:id="@+id/signup_click_signup_google"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/button_drawable_google"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/g" />

                <TextView


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"

                    android:layout_marginBottom="15dp"
                    android:text="@string/sign_up_google"
                    android:textAlignment="center"
                    android:textColor="@color/black_white"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"

                android:id="@+id/signup_click_signup_facebook"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/button_drawable_facebook"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/f" />

                <TextView


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"

                    android:layout_marginBottom="15dp"
                    android:text="@string/sign_up_facebook"
                    android:textAlignment="center"
                    android:textColor="@color/white_white"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/already_have_account" />

                <TextView
                    android:id="@+id/signup_text_click_login"
                    android:textColor="@color/solmon"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/log_in" />





            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>